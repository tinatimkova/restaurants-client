<section data-id="{{restaurant.id}}">
  <h6>Name:</h6>
   {{restaurant.name}}
  <h6>Address:</h6>
   {{restaurant.address}}
  <h6>Description:</h6>
  <p>
    {{#if restaurant.description}}
    {{else}}
      No description provided.
      {{/if}}
  </p>
  <h6>Rating:</h6>
  {{restaurant.rating}}
  <div>
  <button class='btn btn-danger remove' data-id="{{restaurant.id}}">Remove</button>
  </div>
  <div>
  <button class='btn btn-warning edit' data-id="{{restaurant.id}}">Edit</button>
  </div>
</section>
